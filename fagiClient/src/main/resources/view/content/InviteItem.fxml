<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Rectangle2D?>
<fx:root fx:id="UniqueInviteItem" type="HBox" alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity"
         minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#openConversation"
         styleClass="inviteItem" stylesheets="@../../style/invitationitem.css"
         xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
    <Pane styleClass="image">
        <ImageView fx:id="image" fitHeight="46.0" fitWidth="46.0" layoutY="3.0" pickOnBounds="true"
                   preserveRatio="true">
            <viewport>
                <Rectangle2D height="46.0" width="46.0"/>
            </viewport>
        </ImageView>
        <Circle fill="#ffffff00" layoutX="23.0" layoutY="26.0" radius="23.0" stroke="WHITE"
                strokeType="OUTSIDE" strokeWidth="13.0" styleClass="circleHack"/>
        <HBox.margin>
            <Insets bottom="10.0" left="20.0" right="10.0" top="10.0"/>
        </HBox.margin>
    </Pane>
    <VBox alignment="CENTER_LEFT" styleClass="JSnFcc">
        <Label fx:id="usernameLabel" text="Marcus Haagh"/>
        <Label layoutX="10.0" layoutY="10.0" text="Sent a message"/>
        <Label fx:id="date" styleClass="date" text="2 Jul"/>
    </VBox>
    <Label fx:id="lastMessage" layoutY="33.0" styleClass="mu, ng"/>
</fx:root>
