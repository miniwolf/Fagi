<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<HBox layoutX="10.0" layoutY="10.0" styleClass="holder, me" stylesheets="@../../style/conversation.css" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
    <Pane HBox.hgrow="ALWAYS" />
    <Pane styleClass="text-holder">
        <GridPane styleClass="text-fix">
            <Label fx:id="message" styleClass="text-message" wrapText="true" />
        </GridPane>
    </Pane>
    <Pane maxHeight="-Infinity" styleClass="tip">
        <Circle centerX="7.0" centerY="8.0" fill="TRANSPARENT" radius="8.0" stroke="#cfd8dc" strokeType="OUTSIDE"
                strokeWidth="8.0"/>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#eceff1" height="8.0" layoutX="-8.0" layoutY="-8.0"
                   stroke="TRANSPARENT" strokeType="OUTSIDE" strokeWidth="8.0" width="30.0"/>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#eceff1" height="19.0" layoutY="6.0" stroke="TRANSPARENT"
                   strokeType="OUTSIDE" strokeWidth="8.0" width="20.0"/>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#eceff1" height="30.0" layoutX="8.0" layoutY="-5.0"
                   stroke="TRANSPARENT" strokeType="OUTSIDE" strokeWidth="8.0" width="12.0"/>
    </Pane>
</HBox>
