<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<BorderPane layoutX="575.0" layoutY="90.0" styleClass="message" stylesheets="@../../style/conversation.css" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <VBox>
         <HBox alignment="CENTER_LEFT" styleClass="message-title">
            <Pane>
               <Pane layoutY="12.0" styleClass="picture"/>
            </Pane>
            <VBox styleClass="middle-holder">
               <Label fx:id="name" styleClass="mu" VBox.vgrow="ALWAYS"/>
               <Label fx:id="date" styleClass="last-seen" VBox.vgrow="NEVER"/>
            </VBox>
            <HBox styleClass="icon">
               <Button styleClass="minimize"/>
               <Button styleClass="popout"/>
               <Button styleClass="close"/>
            </HBox>
         </HBox>
      </VBox>
   </top>
   <center>
      <Pane id="centerContent">
         <BorderPane styleClass="message-holder">
            <bottom>
               <ScrollPane hbarPolicy="NEVER" styleClass="message-holder, message-scroller" vvalue="1.0">
                  <VBox fx:id="chat"/>
               </ScrollPane>
            </bottom>
            <top>
               <HBox styleClass="chatmenu" BorderPane.alignment="CENTER">
                  <HBox HBox.hgrow="ALWAYS">
                     <Pane styleClass="addpeople-holder">
                        <HBox.margin>
                           <Insets left="5.0"/>
                        </HBox.margin>
                        <Button layoutX="-1.0" layoutY="-1.0" mnemonicParsing="false">
                           <graphic>
                              <Pane styleClass="addpeoplebutton"/>
                           </graphic>
                        </Button>
                     </Pane>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT">
                     <Pane styleClass="chatsettings-holder">
                        <Pane styleClass="settings-filler"/>
                        <Pane prefHeight="200.0" prefWidth="200.0" styleClass="settingsbutton"/>
                     </Pane>
                  </HBox>
               </HBox>
            </top>
         </BorderPane>
         <BorderPane styleClass="settingsmenu" visible="false">
            <top>
               <VBox styleClass="togglelist" BorderPane.alignment="TOP_LEFT">
                  <HBox alignment="CENTER_LEFT" styleClass="toggle-holder">
                     <Pane styleClass="button-wrapper">
                        <HBox styleClass="item">
                           <Pane styleClass="button-wrapper">
                              <Button mnemonicParsing="false" styleClass="check-box"/>
                           </Pane>
                           <Label styleClass="toggle-message" text="Label"/>
                        </HBox>
                     </Pane>
                  </HBox>
               </VBox>
            </top>
            <bottom>
               <Pane BorderPane.alignment="CENTER"/>
            </bottom>
         </BorderPane>
      </Pane>
   </center>
   <bottom>
      <Pane>
         <Pane/>
         <Pane styleClass="outline, field" visible="false">
            <Button layoutX="8.0" layoutY="8.0" styleClass="icon, smiley"/>
            <Pane layoutX="28.0" styleClass="area">
               <TextArea fx:id="message" layoutY="1.0" promptText="Send a message" styleClass="text"/>
            </Pane>
         </Pane>
      </Pane>
   </bottom>
</BorderPane>
