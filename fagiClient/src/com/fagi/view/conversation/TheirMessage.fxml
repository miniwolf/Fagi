<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" fx:id="UniqueTheirMessage" styleClass="holder, their"
         stylesheets="@../../style/conversation.css" type="HBox" xmlns="http://javafx.com/javafx/8.0.111">
    <Pane maxHeight="32.0" maxWidth="32.0">
        <ImageView fx:id="image" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" styleClass="picture">
            <viewport>
                <Rectangle2D height="32.0" width="32.0" />
            </viewport>
        </ImageView>
        <Circle fill="#ffffff00" layoutX="16.0" layoutY="16.0" radius="13.0" stroke="#eceff1" strokeType="OUTSIDE" strokeWidth="10.0" />
    </Pane>
    <Pane maxHeight="-Infinity" styleClass="tip" />
    <TextArea fx:id="message" editable="false" prefColumnCount="0" prefRowCount="0" styleClass="text-message" wrapText="true" />
</fx:root>
