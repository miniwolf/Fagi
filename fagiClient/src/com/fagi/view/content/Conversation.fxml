<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>

<Pane onMouseClicked="#openConversation" styleClass="contact" stylesheets="@../../style/contact.css"
      xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
    <Pane layoutX="24.0" layoutY="16.0" styleClass="image">
        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
            <Image url="https://lh3.googleusercontent.com/-sF84_QxCOec/AAAAAAAAAAI/AAAAAAAAAAA/8-c-HHIriAg/s46-c-k-no/photo.jpg"/>
            <viewport>
                <Rectangle2D height="40.0" width="40.0"/>
            </viewport>
        </ImageView>
        <Circle fill="#ffffff00" layoutX="20.0" layoutY="20.0" radius="20.0" stroke="WHITE"
                strokeType="OUTSIDE" strokeWidth="10.0" styleClass="circleHack"/>
    </Pane>
    <Pane layoutX="80.0">
        <HBox layoutY="14.0" styleClass="content-text">
            <Label fx:id="usernameLabel" styleClass="mu"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label fx:id="date" styleClass="date"/>
        </HBox>
        <Label fx:id="lastMessage" layoutY="33.0" styleClass="mu, ng"/>
    </Pane>
</Pane>
