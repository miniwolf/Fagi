<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.TextArea?>
<VBox layoutX="573.0" layoutY="90.0" styleClass="message" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
    <HBox styleClass="message-title">
        <Pane styleClass="icon">
            <Pane layoutY="12.0" styleClass="picture"/>
        </Pane>
        <VBox styleClass="middle-holder">
            <Label fx:id="name" styleClass="mu"/>
            <Label fx:id="date" styleClass="last-seen"/>
        </VBox>
        <HBox styleClass="icon">
            <Button styleClass="icon, minimize" />
            <Button styleClass="icon, popout" />
            <Button styleClass="icon, close" />
        </HBox>
    </HBox>
    <ScrollPane>
        <VBox styleClass="text-content">
            <HBox styleClass="holder">
                <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" styleClass="picture">
                    <Image url="https://lh5.googleusercontent.com/-HuqNw2gS7KA/AAAAAAAAAAI/AAAAAAAAATk/06-Td0R7Gdk/s32-c-k-no/photo.jpg" />
                </ImageView>
                <Pane maxHeight="-Infinity" styleClass="tip" />
                <Pane styleClass="text-holder">
                    <Label layoutX="9.0" styleClass="text-message" text="Hejasdlkjaljd"/>
                </Pane>
            </HBox>
        </VBox>
    </ScrollPane>
    <Pane styleClass="outline, field">
        <Button layoutX="8.0" layoutY="8.0" mnemonicParsing="false" styleClass="icon, smiley" />
        <Pane layoutX="28.0" styleClass="area">
            <TextArea fx:id="message" layoutY="1.0" minHeight="-Infinity" promptText="Send a message" styleClass="text" />
        </Pane>
    </Pane>
</VBox>