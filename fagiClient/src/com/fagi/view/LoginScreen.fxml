<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="195.0" prefWidth="230.0" styleClass="root" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
    <MenuBar styleClass="fagi-menu" VBox.vgrow="NEVER">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#menuCreateUserActionPerformed" text="Create New User..." />
            <MenuItem mnemonicParsing="false" onAction="#menuQuit" text="Quit" />
        </Menu>
    </MenuBar>
    <AnchorPane prefHeight="170.0" prefWidth="230.0" styleClass="wrapper" VBox.vgrow="NEVER">
        <VBox layoutX="14.0" layoutY="14.0" spacing="10.0">
            <TextField fx:id="username" layoutX="14.0" layoutY="14.0" prefHeight="25.0" prefWidth="203.0" text="Enter requestName..." />
            <PasswordField fx:id="password" layoutX="14.0" layoutY="47.0" onAction="#handleUserRequest" prefHeight="25.0" prefWidth="203.0" text="Enter password..." />
            <PasswordField fx:id="passwordRepeat" layoutX="14.0" layoutY="79.0" onAction="#handleUserRequest" prefHeight="25.0" prefWidth="203.0" text="Enter Password..." visible="false" />
        </VBox>
        <Button fx:id="loginBtn" layoutX="163.0" layoutY="133.0" mnemonicParsing="false" onMousePressed="#handleUserRequest" styleClass="g-button, g-button-submit" text="Login..." AnchorPane.rightAnchor="12.0" />
        <Label fx:id="messageLabel" layoutX="14.0" layoutY="111.0" prefHeight="47.0" prefWidth="141.0" text="Label" />
    </AnchorPane>
    <stylesheets>
        <URL value="@/com/fagi/style/LoginScreen.css" />
    </stylesheets>
</VBox>
